<!doctype html>
<html>
    <head>
        {{> mixfindr/templates/header}}    
    </head>
    <body>
        {{> mixfindr/templates/title}}
        {{> mixfindr/templates/search-bar}}
        <div class="container result">
            <div class="row">
                <div class="span12">
                    <h1 class="result-title">Artist search: {{& artist}}</h1>    
                </div>    
            </div>
            <div class="row">
                <div class="span4">
                    <h4>Similar artists:</h4>
                    <ul>
                    {{#similar_artists_links}}
                        <li><a href="{{url}}">{{& name}}</a></li>
                    {{/similar_artists_links}}
                    </ul>
                </div>
                <div class="span4">
                    <h4>Mixes:</h4>
                    <ul>
                        {{#filtered_artist_mixes}}
                        <li><a href="{{url}}" rel="external">{{title}}</a></li>
                        {{/filtered_artist_mixes}}
                    </ul>
                </div>
            </div>    
        </div>
    </body>
</html>