<!doctype html>
<html>
    <head>
        {{> mixfindr/templates/header}}    
    </head>
    <body>
        {{> mixfindr/templates/title}}
        {{> mixfindr/templates/search-bar}}
        <div class="container result">
            <div class="container">
                <h1 class="result-title">Mixes found for {{user}}'s top artists:</h1>
            </div>
            {{#user_top_artists_data}}
            <div class="row">
                {{#.}}
                <div class="span4">
                    <h4 class="artist-name">{{name}}</h4><a class="search-this-artist" href="{{url}}">Search this artist</a>
                    <ul>
                        {{#mixes}}
                            <li><a href="{{url}}" rel="external">{{title}}</a></li>
                        {{/mixes}}
                    </ul>
                </div>
                {{/.}}
            </div>
            {{/user_top_artists_data}}
        </div>
    </body>
</html>